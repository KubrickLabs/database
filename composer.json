{
    "name": "kubricklabs/database",
    "type": "library",
    "description": "Database package for the KubrickLabs tools collection",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Bentsen",
            "email": "thomas@lindgreenit.dk"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "app\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }, 
    "minimum-stability": "stable",
    "prefer-stable": true
}
